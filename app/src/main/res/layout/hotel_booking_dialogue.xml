<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/hotel_cd_tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hotel Finding"
    android:layout_centerHorizontal="true"
    android:textSize="30sp"
    android:textColor="#E67E22"
    android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/hotel_cd_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_cd_tv1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/hotel_cd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/hotel_cd_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/hotel_cd_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/hotel_cd_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_cd_layout1"
        android:orientation="vertical"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/hotel_cd_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/hotel_cd_contact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/hotel_cd_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/hotel_cd_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_cd_layout2"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="#ffc0cb"
        android:elevation="20dp"
        android:text="Close"
        android:textColor="#E67E22"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>